#Simple Calculator

#print(eval(input("calc: ")))

num1 = float(input("Enter a Number: "))
operator = input("Select an operator: + - * /: ")
num2 = float(input("Ennter a Number: "))

if operator == "+":
    result = num1 + num2 
    print(result)
elif operator == "-":
    result = num1 - num2
    print(result)
elif operator == "*":
    result = num1 * num2
    print(result)
elif operator == "/":
    if num2 == 0:
         print("Error number cannot be diveded by 0")
    else: 
        result = num1 / num2
        print(result)
else: 
    print("Operator not valid")
exit() 
